FROM ubuntu:16.04
RUN export DEBIAN_FRONTEND=noninteractive
RUN apt-get -y update && \
    apt-get -y --no-install-recommends install tzdata keyboard-configuration
RUN apt-get -y --no-install-recommends install sudo subversion ca-certificates less lsb-release software-properties-common
RUN add-apt-repository -y ppa:git-core/ppa && apt-get -y install git
RUN apt-get -y --no-install-recommends install \
    zlib1g-dev fakeroot build-essential devscripts debhelper g++ \
    libqt4-dev libqtwebkit-dev
RUN apt clean && rm -rf /var/lib/apt/lists/*
